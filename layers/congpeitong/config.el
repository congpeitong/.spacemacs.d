;; 开启行号显示
(global-linum-mode t)
;; 定制时间显示格式
(setq display-time-format "%Y年-%m月-%d日 %a %H:%M")
(setq display-time-default-load-average nil)
;; 开启时间显示
(display-time-mode t)



